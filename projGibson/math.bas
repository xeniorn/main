Attribute VB_Name = "math"
'****************************************************************************************************
Function Lg(a As Double) As Double
'====================================================================================================
'Logarithm base 10
'Juraj Ahel, 2015-02-11
'Last update 2015-02-11
'====================================================================================================

Lg = Log(a) / Log(10#)

End Function
'****************************************************************************************************
Function Ln(a As Double) As Double
'====================================================================================================
'Logarithm base e (natural logarithm)
'Juraj Ahel, 2015-02-11
'Last update 2015-02-11
'====================================================================================================

Ln = Log(a)

End Function
'****************************************************************************************************
Function Lb(a As Double) As Double
'====================================================================================================
'Logarithm base 2
'Juraj Ahel, 2015-02-11
'Last update 2015-02-11
'====================================================================================================

Lb = Log(a) / Log(2)

End Function
